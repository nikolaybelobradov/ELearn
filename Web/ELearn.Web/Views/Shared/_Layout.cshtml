<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link href="~/img/logo.png" rel="icon" type="image/png">

    <link rel="stylesheet" href="~/vendor/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/lazy.css">
    <link rel="stylesheet" href="~/css/demo.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous">
</head>

<body class="index">

    <partial name="_MainNavPartial" />
    <partial name="_CookieConsentPartial" />

    @this.RenderBody()

    <footer class="footer-1 bg-light text-dark">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="links">
                    <ul class="footer-menu list-unstyled d-flex flex-row text-center text-md-left">
                        <li><a href="#" target="_blank">About Us</a></li>
                        <li><a href="#" target="_blank">Privacy</a></li>
                    </ul>
                </div>
                <div class="social mt-4 mt-md-0">
                    <a class="facebook btn btn-outline-primary btn-icon" href="https://www.facebook.com/nikolaybelobradov/" target="_blank">
                        <i class="fab fa-facebook"></i>
                        <span class="sr-only">View my Facebook Profile</span>
                    </a>
                    <a class="linkedin btn btn-outline-primary btn-icon" href="https://linkedin.com/in/nikolay-belobradov-a022a4180" target="_blank">
                        <i class="fab fa-linkedin"></i>
                        <span class="sr-only">View my LinkedIn Profile</span>
                    </a>
                    <a class="github btn btn-outline-primary btn-icon" href="https://github.com/nikolaybelobradov/ELearn" target="_blank">
                        <i class="fab fa-github"></i>
                        <span class="sr-only">View my GitHub Profile</span>
                    </a>
                </div>
            </div>
            <div class="copyright text-center">
                <hr />
                <p class="small">
                    &copy; 2020
                    <span><i class="fas fa-code"></i></span>  Nikolay Belobradov
                    <span><i class="fas fa-palette"></i></span> Bootstrapbay
                    <span><i class="fas fa-people-carry"></i></span> Nikolay Kostov, Vladislav Karamfilov
                </p>
            </div>
        </div>
    </footer>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/popper/popper.min.js"></script>
    <script src="~/vendor/bootstrap/bootstrap.min.js"></script>

    <!-- optional plugins -->
    <script src="~/vendor/nouislider/js/nouislider.min.js"></script>

    <!--   lazy javascript -->
    <script src="~/js/lazy.js"></script>

    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
