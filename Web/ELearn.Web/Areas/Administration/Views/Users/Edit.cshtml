@model EditUserViewModel

@using ELearn.Common; 
@{
    ViewData["Title"] = "Edit user";
}
<div class="container">

    <div class="section">

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header">
                    <a class="btn btn-warning btn-sm"
                       asp-area="Administration"
                       asp-controller="Users"
                       asp-action="Index">
                        <i class="fas fa-arrow-left"></i>
                        Back
                    </a>
                    <br /><br />

                    <h2>
                        @ViewData["Title"]
                        <a class="btn btn-danger btn-sm"
                           asp-area="Administration"
                           asp-controller="Users"
                           asp-action="Delete"
                           asp-route-id="@Model.Id"
                           id="deleteButton"
                           data-toggle="modal"
                           data-target="#deleteConfirmationModal">
                            <i class="fas fa-trash"></i>
                        </a>
                    </h2>
                    <p>You can change the information about this user.</p>
                </div>
                <div class="component">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="@Model.FirstName">First Name</label>
                            <input asp-for="@Model.FirstName" class="form-control" value="@Model.FirstName">
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.MiddleName">Middle Name</label>
                            <input asp-for="@Model.MiddleName" class="form-control" value="@Model.MiddleName">
                            <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.LastName">Last Name</label>
                            <input asp-for="@Model.LastName" class="form-control" value="@Model.LastName">
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Role">Role</label>
                            <select asp-for="@Model.Role" class="form-control">
                                @if (@Model.Role.Contains(GlobalConstants.AdministratorRoleName))
                                {
                                    <option value="@GlobalConstants.AdministratorRoleName" selected>@GlobalConstants.AdministratorRoleName</option>
                                    <option value="@GlobalConstants.LecturerRoleName">@GlobalConstants.LecturerRoleName</option>
                                    <option value="None">None</option>
                                }
                                else if (@Model.Role.Contains(GlobalConstants.LecturerRoleName))
                                {
                                    <option value="@GlobalConstants.AdministratorRoleName">@GlobalConstants.AdministratorRoleName</option>
                                    <option value="@GlobalConstants.LecturerRoleName" selected>@GlobalConstants.LecturerRoleName</option>
                                    <option value="None">None</option>
                                }
                                else
                                {
                                    <option value="@GlobalConstants.AdministratorRoleName">@GlobalConstants.AdministratorRoleName</option>
                                    <option value="@GlobalConstants.LecturerRoleName">@GlobalConstants.LecturerRoleName</option>
                                    <option value="None" selected>None</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.Id" class="form-control" value="@Model.Id">
                        </div>
                        <div class="row mx-4 text-white">
                            <a class="btn btn-warning col-md-5 mt-5"
                               asp-area="Administration"
                               asp-controller="Users"
                               asp-action="Index">
                                Cancel
                            </a>
                            <div class="col-1 mr-4"></div>
                            <button type="submit" class="btn btn-primary col-md-5 mt-5">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <partial name="_DeleteConfirmationModalPartial" />
</div>

<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/modalButtons.js"></script>
}

